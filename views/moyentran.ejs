<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/litera/bootstrap.min.css" integrity="sha384-enpDwFISL6M3ZGZ50Tjo8m65q06uLVnyvkFO3rsoW0UC15ATBFz3QEhr3hmxpYsn" crossorigin="anonymous">
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js" ></script>
<script type="text/javascript">
$(document).ready(function() {
 
    $('#champ1').hide(); // on cache le champ par défaut
    $('#champ2').hide();
    $('#champ3').hide();
    $('select[name="type"]').change(function() { // lorsqu'on change de valeur dans la liste
    var valeur = $(this).val(); // valeur sélectionnée
     
        //if(valeur != '') { // si non vide
            if(valeur == 'bus') { 
                $('#champ1').show();
            } else {
                $('#champ1').hide();           
            }
            
        //}
      
        if(valeur == 'taxi') { 
                $('#champ2').show();
            } else {
                $('#champ2').hide();           
            }
        
        if(valeur == 'covoiturage') { 
                $('#champ3').show();
            } else {
                $('#champ3').hide();           
            }
    });
});
</script>
<style>
  body{
  background-color: #d4edee !important;
}
.container{
  position: relative;
  text-align: center;
}
.row{
  width: 270px;
